<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tcd.training.com.trainingproject.ExternalInternalIntent.ExternalInternalIntentActivity">

    <Button
        android:id="@+id/btn_external_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="External Intent"/>

    <Button
        android:id="@+id/btn_internal_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internal Intent"/>

</LinearLayout>
