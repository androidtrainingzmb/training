<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tcd.training.com.trainingproject.ServicesDemo.IntentService.BackgroundTaskIntentServiceActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_result_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_receiver"
            android:onClick="onRadioButtonClicked"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_broadcast_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/broadcast_receiver"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

</LinearLayout>
